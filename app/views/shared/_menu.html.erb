<%= nav_bar :fixed => :top, :brand => "Check It!" do %>
  <% if current_user %>
    <%= menu_group :pull => :right do %>
      <%= menu_item "Log Out", log_out_path %>
    <% end %>
    <%= menu_group :pull => :right do %>
      <%= form_tag links_path, :class => "form-inline" do %>
        <%= select_tag(:recipient_id, options_from_collection_for_select(User.all, "id", "email")) %>
        <%= text_field_tag :url, params[:url], placeholder: "url" %>
        <%= submit_tag "Send", class: "btn btn-success"%>
      <% end %>
    <% end %>
  <% else %>
    <%= menu_group :pull => :right do %>
      <%= form_tag sessions_path, :class => "form-inline" do %>
        <%= text_field_tag :email, params[:email], placeholder: "email" %>
        <%= password_field_tag :password, params[:password], placeholder: "password" %>
        <%= submit_tag "Log In", class: "btn btn-success"%>
      <% end %>
    <% end %>
  <% end %>
<% end %>
