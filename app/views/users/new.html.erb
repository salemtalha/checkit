
<div class="text-center">
<h1> Sign Up</h1>
<%= form_for @user do |f| %>
  <% if @user.errors.any? %>
    <div class="error_messages">
      <h2>Form is invalid</h2>
      <ul>
        <% for message in @user.errors.full_messages %>
          <li><%= message %></li>
        <% end %>
      </ul>
    </div>
  <% end %>
    <%= f.text_field :first_name, placeholder: "First Name" %> <br/>
    <%= f.text_field :last_name, placeholder: "Last Name"  %> <br/>
    <%= f.text_field :email, placeholder: "Email" %> <br/>
    <%= f.password_field :password, placeholder: "Password" %> <br/>
    <%= f.password_field :password_confirmation, placeholder: "Re-enter Password" %> <br/>

    <p class="button"><%= f.submit "Register" %></p>

<% end %>
</div>
